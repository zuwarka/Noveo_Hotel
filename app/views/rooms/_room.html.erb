<div id="<%= dom_id room %>">
  <div class="row">
    <div class="col-xs-8">
      <div class="well well-lg">
        <div class="review-title">
          <p>
            <%= link_to room.title, room %>
          </p>
        </div>
        <div class="review-title">
          <p><strong>Price</strong>: <%= room.price %> AMD per one night</p>
        </div>
        <div class="review-body">
          <p>
            <%= room.description %>
          </p>
        </div>
        <hr />
        <% room.room_photos.each do |photo| %>
          <%= link_to image_tag(photo, style:"width:200px; height:200px"), photo %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div>
  <% if params[:action] == "show" %>
    <%= link_to "Back to rooms", rooms_path %>
  <% end %>
</div>
<p>
  <%= link_to "Booking this room", room_path(room) %>
</p>