<%= render 'shared/errors', obj: @review %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@review, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :username, class: "form-control", placeholder: "Username of review", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :email, class: "form-control", placeholder: "Email of review", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-5">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of review" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

