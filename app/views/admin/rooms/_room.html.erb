<div id="<%= dom_id room %>">
  <p>
    <strong>Title:</strong>
    <%= room.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= room.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= room.price %>
  </p>

  <hr />
  <% room.room_photos.each do |photo| %>
    <%= link_to image_tag(photo, style:"width:200px; height:200px"), photo %>
  <% end %>

</div>