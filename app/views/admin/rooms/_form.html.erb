<%= form_for :room, url: admin_rooms_url, data: { turbo:false } do |form| %>
  <% if @room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% @room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-10">
      <%= form_for(@room, :html => {class: "form-horizontal", role: "form"}) do |form| %>
        <div class="form-group">
          <div class="control-label col-sm-12">
            <%= form.label :title %>
          </div>
          <div class="col-sm-6">
            <%= form.text_field :title, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-12">
            <%= form.label :description %>
          </div>
          <div class="col-sm-8">
            <%= form.text_area :description, rows: 10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-12">
            <%= form.label :price %>
          </div>
          <div class="col-sm-8">
            <%= form.text_field :price, rows: 10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-12">
            <%= form.label :room_photos %>
          </div>
          <div class="col-sm-8">
            <%= form.file_field :room_photos,  rows: 10, class: "form-control", multiple: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-10">
            <%= form.submit class: 'btn btn-primary btn-large' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>